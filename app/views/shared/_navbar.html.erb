
<header class="navbar navbar-fixed-top">
  <div class="container">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to root_path, {:class=>"navbar-brand"} do %>
                      <image src="https://s3-us-west-1.amazonaws.com/goodlooks/logo.png", alt="GoodLooks Logo" >
                      <% end %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav list-unstyled list-inline navbar-right">
        
                          <% if user_signed_in? %>
                          <li>
                        <!-- User button -->
                        <div class="btn-group">
                            <button type="button" class="btn btn-default dropdown-toggle btn-loggedin" data-toggle="dropdown" aria-haspopup="true">
                                <b><%= current_user.name %></b>
                            </button>
                          

                            <ul class="dropdown-menu">
                                <% if current_user.level == 2 %>

                                <li><%= link_to "Profile", pro_path(current_user.pro.id)
                                 %></li>
                                <% end %>
                                <li><%= link_to "Account", edit_user_registration_path %></li>                                
                                <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
                            </ul>
                            </div>
                            </li>
                            
                            <% else %>

                    <li>
                        <div class="btn-group">                            
                       <%= link_to new_user_registration_path, "data-no-turbolink" => true, class: 'f_bold btn btn-default btn-nav-sign btn-lg' do %>
                          Expert Sign-up
                        <% end %>    
                        </div>
                    </li>

                    <li>
                        <div class="btn-group">      
                          <%= link_to pages_info_path, "data-no-turbolink" => true, class: 'f_bold btn btn-default btn-theme btn-lg' do %>
                          Info for Experts
                          <% end %>                                
                        </div>
                    </li>


                            <% end %>    
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</header>
