<section class="upcoming-evets">
    <div class="container">
        <div class="row">
          <div class="col-sm-12">
            <div class="base-container">
              <div class="section-title">
                <ul class="list-inline">
                  <li class="base-title">Welcome <%= current_user.name %>.  Update your account information here</li>
                </ul>
              </div>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, :class => "form-control") do |f| %>
  <%= f.error_notification %>

      <% if current_user.level == 2 %>
        <%= link_to "View your profile info", pro_path(current_user.pro.id) %><br>
      <% end %>
  <div class="form-inputs">
    <div class="row">
      <div class="col-xs-4 col-sm-4">
        <div class="section-title">
          <ul class="list-inline">
            <li class="f_bold">Update account info</li>
          </ul>
        </div>
  

        <%= f.input :email, required: true, autofocus: true, label: "Update email", :class => 'news_author'  %>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>

                <br>
        <b>Change your city</b>
    <%= f.input :city, required: true, input_html: {id: "locality"} %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>


        
        <br>
        <b>Change your password</b>
          <%= f.input :password, autocomplete: "off", placeholder: "leave it blank if you don't want to change it", required: false %>
          <%= f.input :password_confirmation, required: false %>
        <br>
        <b>Confirm changes with your password</b>          
          <%= f.input :current_password, placeholder: "we need your current password to confirm your changes", required: true %>
  </div>

  <div class="col-xs-4 col-sm-4 col-md-offset-2">
        <div class="section-title">
          <ul class="list-inline">
            <% if current_user.level == 2 %>
              <li class="f_bold">Update services</li>
          </ul>
        </div>
        <b>Please select the types of services do you provide</b>
          <%= f.input :trainer, :as => :boolean, label: "Personal Training" %>
          <%= f.input :stylist, :as => :boolean, label: "Personal Fashion Stylist" %>
          <%= f.input :dietician, :as => :boolean , label: "Dietician " %>
          <%= f.input :nutritionist, :as => :boolean, label: "Nutritionist" %>
          <%= f.input :health_coach, :as => :boolean , label: "Health / Nutrition Coach" %>
          <%= f.input :career_coach, :as => :boolean, label: "Career Coach" %>
          <%= f.input :life_coach, :as => :boolean, label: "Life Coach" %>
  <% end %>
  </div>
  </div>
  </div>
<br>
<div class="form-actions">
    <%= f.submit "Update Account", class: 'f_bold btn btn-default btn-theme btn-lg' %>
    </div>
<% end %>

<br>

<br>
<b>Unhappy? <%= link_to "Cancel your account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></b>
<br><br><br>
  </div>



<%= render "users/script_city_autocomplete" %>
</div>
</div>
</div>
</div>

</section>