<section class="upcoming-evets">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
          <div class="col-sm-12">
            <div class="base-container">
              <div class="section-title">
                <ul class="list-inline">
                  <li class="base-title">Welcome! Join our network of experts</li>
                </ul>
              </div>
<p>Already created an account?  <%= render "devise/shared/links" %>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="row">
      <div class="col-xs-4 col-sm-4">
        <div class="section-title">
          <ul class="list-inline">
            <li class="f_bold">Create an account</li>
          </ul>
        </div>
 
    <%= f.input :name, required: true, autofocus: true %>
    <%= f.input :email, required: true %>
    <%= f.input :city, required: true, input_html: {id: "locality"} %>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>
    <%= f.input :password, required: true, placeholder: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= f.input :password_confirmation, required: true %>

    <%= #f.select :level, options_for_select([['user', 1], ['pro', 2], ['admin', 3]]), prompt: "What's your type"
    %>
 </div>

  <div class="col-xs-4 col-sm-4 col-md-offset-2">
        <div class="section-title">
          <ul class="list-inline">
              <li class="f_bold">Please select your area of expertise</li>
          </ul>
        </div>
    <%= f.input :trainer, :as => :boolean, label: "Personal Training" %>
    <%= f.input :stylist, :as => :boolean, label: "Personal Fashion Stylist" %>
    <%= f.input :dietician, :as => :boolean , label: "Dietician " %>
    <%= f.input :nutritionist, :as => :boolean, label: "Nutritionist" %>
    <%= f.input :health_coach, :as => :boolean , label: "Health / Nutrition Coach" %>
    <%= f.input :career_coach, :as => :boolean, label: "Career Coach" %>
    <%= f.input :life_coach, :as => :boolean, label: "Life Coach" %>
    <%= f.input :level, as: :hidden, input_html: {value: '2'} %>
  </div>
  </div>
  </div>
<br>
<div class="form-actions">
    <%= f.submit "Join Now", class: 'f_bold btn btn-default btn-theme btn-lg' %>
    </div>
  </div>
<% end %>

<%= render "users/script_city_autocomplete" %>
    </div>
    </div>
</div>  
</section>
