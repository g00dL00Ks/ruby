<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, required: true, autofocus: true %>
    <%= f.input :email, required: true %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= f.input :password_confirmation, required: true %>
    <%= #f.select :level, options_for_select([['user', 1], ['pro', 2], ['admin', 3]]), prompt: "What's your type"
    %></div>
 
    <%= f.input :level, as: :hidden, input_html: {value: '2'} %>

     <h3>Please select the types of services do you provide</h3>
    <%= f.input :trainer, :as => :boolean, label: "Personal Training" %>
    <%= f.input :stylist, :as => :boolean, label: "Personal Fashion Stylist" %>
    <%= f.input :dietician, :as => :boolean , label: "Dietician " %>
    <%= f.input :nutritionist, :as => :boolean, label: "Nutritionist" %>
    <%= f.input :health_coach, :as => :boolean , label: "Health / Nutrition Coach" %>
    <%= f.input :career_coach, :as => :boolean, label: "Career Coach" %>
    <%= f.input :life_coach, :as => :boolean, label: "Life Coach" %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
