<section class="upcoming-evets">
    <div class="container">
        <div class="row">
          <div class="col-sm-12">
            <div class="base-container">
              <div class="section-title">
                <ul class="list-inline">
                  <li class="base-title">Log In</li>
                </ul>
              </div>


<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), :class => "form-control") do |f| %>
<div class="row">  	
 <div class="col-xs-12 col-sm-6 col-md-4">  
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true %>
    <%= f.input :password, required: false %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    <br>
  </div>
  </div>
</div>

<div class="row">  	
 <div class="col-xs-12 col-sm-6 col-md-4">  
<div class="form-actions">
    <%= f.submit "Log in", class: 'f_bold btn btn-default btn-theme btn-lg' %>
</div>
<% end %>
<br>
<%= render "devise/shared/links" %>

<br>
<br>


</div>  
    </div>
    </div>
</div>  
</section>
