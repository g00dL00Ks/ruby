<div class="col-xs-4 col-sm-4 col-md-offset-1">
<%= simple_form_for(@elist, :class => "form-control") do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, placeholder: "Your name*", label: '&nbsp;'.html_safe  %>
    <%= f.input :email, placeholder: "Your email*", label: '&nbsp;'.html_safe  %>

    <%= f.input :city, input_html: {id: "locality"}, placeholder: "Your city*", label: '&nbsp;'.html_safe  %>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>
  </div>

	<br>
	<div class="form-actions">
    	<%= f.submit "Submit", class: 'f_bold btn btn-default btn-theme btn-lg' %>
    </div>

<% end %>

<%= render "users/script_city_autocomplete" %>