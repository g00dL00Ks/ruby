<section class="tab_section">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">

				<div class="base-container">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="section-title">
                                <ul class="list-inline">
									<li class="base-title"><%= current_user.name %>'s profile </li>
                                </ul>
                            </div>

                        </div>
                    </div>		

                    <div class="col-sm-12 center">
                        <h2>There are three steps to building your profile</h2>
                        <br>

                    </div>


                    <div class="row">                    
                    <div class="col-sm-10">
                                <h3>1. Build your profile</h3>
                            <button type="button" class="f_bold btn btn-default btn-theme btn-lg" >
                              <%= link_to "Edit Profile info", edit_pro_path(current_user.pro.id), "data-no-turbolink" => true %>
                            </button>
                            <br><br>
                        </div>
                    </div>

                    <div class="row">    
                        <div class="col-sm-10">
							<h3>2.  Add the services you offer</h3>
                            <p>Your current services offered:</p>
								<% @services.each do |service| %>
    								<p><b>Service: <%= service.title %></p></b>
    								<p>Description: <%= service.description %></p>
    								<p>Length: <%= service.length %> mins</p>
    								<p>Price: <%= number_to_currency(service.price) %></p>      
    								<p><%= link_to 'Edit  |  ', edit_pro_service_path(service, current_user.pro.id) %>
                                    <%= # link_to 'Delete', pro_service_path(service, current_user.pro.id), method: :delete, data: { confirm: 'Are you sure?' } 
                                    %> </p>
    								<br>
								<% end %>
                            <button type="button" class="f_bold btn btn-default btn-theme btn-lg" >
                               <%= link_to "Add a service", new_pro_service_path(current_user.pro.id), "data-no-turbolink" => true %>
                            </button>
                                <br> <br>                           
                        </div>
                    </div>


                    <div class="row">    
                        <div class="col-sm-10">
							<h3>3. Add portfolio photos</h3>
								<p>Add pictures of you and/or your work to give your clients a better understanding of your approach</p>	
								<% @photos.each do |photo| %>
    								<p><%= image_tag(photo.image.url(:thumb)) %></p>
								<% end %>

                            <button type="button" class="f_bold btn btn-default btn-theme btn-lg" >
                               <%= link_to "Add a photo", new_pro_photo_path(current_user.pro.id), "data-no-turbolink" => true %>
                            </button>
                                <br>                            
                        </div>
                    </div>


						<div class="row" style="padding: 5% 0%">
                        	<div class="col-sm-10 col-md-offset-1">
                                <h3>Once you submit all your information to GoodLooks we will work with you to launch your complete profile page shortly!  </h3>
                                 <%= render :partial => '/pros/approval' %>
                        
							</div>
						</div>
</div>
</div>
</div>
</div>
</div>
</section>
