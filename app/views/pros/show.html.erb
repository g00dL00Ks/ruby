<section class="tab_section">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">

				<div class="base-container">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="section-title">


                                  <div class="alert alert-success"><%= flash[:approval] %></div>
                              <% end %>

                                <ul class="list-inline">
									<li class="base-title"><%= current_user.name %>'s profile </li>
                                </ul>
                            </div>

                        </div>
                    </div>		

                    <div class="col-sm-12 center">
                        <h2>3 steps to building your profile</h2>
                        <br>

                    </div>


                    <div class="row">                    
                    <div class="col-sm-10">
                                <h3>1. Share your expertise</h3>
                            <p>Add your information.  A complete a profile helps users better find you.</p>                            
                            <%= link_to edit_pro_path(current_user.pro.id), "data-no-turbolink" => true, class: 'f_bold btn btn-default btn-theme btn-lg' do %>
                            Edit Your Info
                            <% end %> 

                            <br><br>
                        </div>
                    </div>

                    <div class="row">    
                        <div class="col-sm-10">

							<h3>2.  Add the services you offer</h3>
                            <p>Your current services offered:</p>
                            <% if @pro.services.count > 0 %>

								<% @services.each do |service| %>
    								<p><b>Service: <%= service.title %></p></b>
    								<p>Description: <%= service.description %></p>
    								<p>Length: <%= service.length %> mins</p>
    								<p>Price: <%= number_to_currency(service.price) %></p>      
    								<p><%= link_to 'Edit  |  ', edit_pro_service_path(current_user.pro.id, service) %>
                                    <%= link_to 'Delete', pro_service_path(current_user.pro.id, service), method: :delete, data: { confirm: 'Are you sure?' }
                                    %> </p>
    								<br>
								<% end %>
                                <% else %>
                                <p> No services listed yet </p>
                                <% end %>
                                <%= link_to new_pro_service_path(current_user.pro.id), "data-no-turbolink" => true, class: 'f_bold btn btn-default btn-theme btn-lg' do %>
                                Add A Service
                                <% end %> 


                                <br> <br>                           
                        </div>
                    </div>


                    <div class="row">    
                        <div class="col-sm-10">
							<h3>3. Add portfolio photos</h3>
								<p>Add pictures of you and/or your work to give your clients a better understanding of your approach</p><br>	
								<% @photos.each do |photo| %>
                                    <p><%= photo.title %></p>
    								<p><%= image_tag(photo.image.url(:thumb)) %></p>
                    <p><%= link_to 'Edit  |  ', edit_pro_photo_path(current_user.pro.id, photo) %>
                    <%= link_to 'Delete', pro_photo_path(current_user.pro.id, photo), method: :delete, data: { confirm: 'Are you sure?' }
                    %></p>                    
                    <br>
								<% end %>

                                <%= link_to new_pro_photo_path(current_user.pro.id), "data-no-turbolink" => true, class: 'f_bold btn btn-default btn-theme btn-lg' do %>
                                Add A Photo
                                <% end %> 


                                <br>                            
                        </div>
                    </div>


						<div class="row" style="padding: 5% 0%">
                        	<div class="col-sm-10 col-md-offset-1">
                                <h3>Once you submit all your information to GoodLooks we will work with you to launch your complete profile page shortly!  </h3>
                                 <%= render :partial => '/pros/approval' %>
                        
							</div>
						</div>
</div>
</div>
</div>
</div>
</div>
</section>
